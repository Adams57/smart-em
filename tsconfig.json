{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true
  },

  "include": ["src/**/*.ts", "src/**/*.vue", "index.d.ts"],
  "exclude": ["node_modules"],
  "files": [],
  "references": [{ "path": "./tsconfig.node.json" }]
}
